@model MyNotes.UI.Web.ViewModels.Admin.Group.SaveGroupViewModel

@using MvcBase.WebHelper.Mvc.Extensions;

<div id="addGroup" >
    @using (Ajax.BeginJqueryForm("frmAddGroup", MVC.Group.Actions.AddGroup(), "addGroupCallback"))
    { 
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>Add New Group</h3>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
                <div class="span3 jqLabel">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="span9 jqInput">
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Xyz", @class = "input-xlarge" })
                    @Html.PopoverValidationMessageFor(m => m.Name)
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="submit" id="btnAddGroup" class="btn btn-success" value="Add" />
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        </div>
    }
</div>
