<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test</title>
    <style>
        div.mainContainer 
        {
            width: 600px;
            height: 400px;
            border: 1px solid #000;
            overflow:hidden;
        }
        
        div.content
        {
            min-height: 380px;
        }
        
        div.slideContent 
        {
            min-width:100%;
            min-height:100%;
            margin: 0px auto;
            padding:10px;
            border:1px solid RED;
        }
        
        ul 
        {
            list-style-type:none;
            min-width:100%;
            min-height:100%;
            margin: auto;
        }
        
        ul li 
        {
            float:left;
            min-width:100%;
            min-height:100%;
        }
        
    </style>
</head>
<body>
    <div class="mainContainer">
        <div class="content">
            <ul>
                <li>
                    <div class="slideContent"></div>
                </li>
                <li>
                    <div class="slideContent"></div>
                </li>
                <li>
                    <div class="slideContent"></div>
                </li>
                <li>
                    <div class="slideContent"></div>
                </li>
            </ul>
        </div>
    </div>
