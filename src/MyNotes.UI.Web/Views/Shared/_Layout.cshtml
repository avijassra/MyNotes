<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@Microsoft.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Include/Cache/main.cssbundle.style")" rel="stylesheet" type="text/css" />
        @RenderSection("styles", false)        
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        @Html.Partial(MVC.Shared.Views._menuBar)
        <div class="container">
            @RenderBody()
        </div>
        <div id="popupContainer" class="modal hide fade in" style="display:none;">
        </div>
        <div id="altMsg" class="row center">&nbsp;</div>
        <div id="footer">
            <p>© Company 2012</p>
        </div>
        <!-- /container -->
        <section>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
            <noscript>Please enable javascript on browser</noscript>
            <script src="@Microsoft.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Include/Cache/main.jsbundle.script")" type="text/javascript"></script>
            <noscript>Please enable javascript on browser</noscript>
            @RenderSection("scripts", false)
        </section>
    </body>
</html>