@model IEnumerable<MyNotes.UI.Web.ViewModels.Admin.User.UserViewModel>

<div id="userListDiv" class="row span8" >
    <div class="list">
        <table class="table table-striped">  
            <thead>
                <tr>
                    <th>S#</th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Nickname</th>
                    <th>Group name</th>
                    <th>&nbsp;</th>
                </tr>  
            </thead>  
            <tbody id="userListTbody">
                @{
                    var index = 1;
                    foreach (var user in Model)
                    { 
                        <tr id="@user.Id">
                            <td class="jqSN">@index</td>
                            <td id="@(user.Id)_uname">@user.Username</td>
                            <td id="@(user.Id)_name">@user.Name</td>
                            <td id="@(user.Id)_nname">@user.Nickname</td>
                            <td id="@(user.Id)_gname">@user.GroupName</td>
                            <td style="width: 100px;">
                                @if (!user.IsSysAccount)
                                { 
                                    <div class="pull-right">
                                        <span class="icon-edit jqUser"></span>
                                        <span class="icon-remove jqUser"></span>
                                    </div>
                                }
                            </td>
                        </tr>
                        if (!user.IsSysAccount)
                        { 
                            <tr id="@(user.Id)_upd_tr" class="updRow" ><td id="@(user.Id)_upd_td" colspan="6"></td></tr>
                        }
                        
                        index += 1;
                    }
                }
            </tbody>  
        </table>
    </div>
    <div class="row" >&nbsp;</div>
    <div class="row pull-right">
        <button id="btnNewUser" class="btn btn-primary">New User</button>
    </div>
</div>