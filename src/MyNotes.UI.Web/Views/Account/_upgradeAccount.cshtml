@model  MyNotes.UI.Web.ViewModels.Admin.Account.SaveAccountViewModel

@using MvcBase.WebHelper;

<div id="updateAccount" class="updPnl" >
    @using (Ajax.BeginJqueryForm("frmUpdateAccount", MVC.Account.Actions.UpdateAccount(), "updateAccountCallback"))
    {
        <div class="row-fluid">
            <div class="span3 jqLabel">
                @Html.LabelFor(m => m.UserId)
            </div>
            <div class="span9 jqInput">
                @Html.DropDownListFor(m => m.UserId, (IEnumerable<SelectListItem>)ViewBag.Users, new { @class = "input-xlarge" })
                @Html.PopoverValidationMessageFor(m => m.UserId)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span3 jqLabel">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="span9 jqInput">
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Bank of America", @class = "input-xlarge" })
                @Html.PopoverValidationMessageFor(m => m.Name)
            </div>
        </div>
        @Html.HiddenFor(m => m.Id, new { style = "display:none;" })    
        <div class="row pull-right">
            <input type="submit" id="btnUpdateAccount" class="btn btn-success" value="Update" />
            <a id="cancelUpdateAccount" class="btn jqCancelUpdate" data-dismiss="modal">Cancel</a>
        </div>
    }
</div>